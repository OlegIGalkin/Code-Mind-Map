<UserControl x:Class="CodeMindMap.MindMapToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="700"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Margin="2" Padding="2" Click="AddChildNodeClick" ToolTip="Add selected code as a mind map node"  Width="20">
                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xED0E;" VerticalAlignment="Center" />
            </Button>
            <Button Margin="2" Padding="2" Click="GotoCodeClick" ToolTip="Jump to code linked with node" x:Name="GoToCodeButton" IsEnabled="False" Width="20">
                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE72A;" VerticalAlignment="Center" />
            </Button>
            <Button Margin="2" Padding="2" Click="NewCodeMindMapClick" ToolTip="Create a new code mind map" Width="20">
                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE8F4;" VerticalAlignment="Center" />
            </Button>
            <Button Margin="2" Padding="2" Click="OpenDevToolsWindowClick" ToolTip="Open Dev Tools" x:Name="OpenDevToolsButton" Width="20">
                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xEC7A;" VerticalAlignment="Center" />
            </Button>
            <Button Margin="2" Padding="2" Click="SaveDataClick" ToolTip="Automatically save mind map as..." x:Name="SaveDataButton" Width="20">
                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" VerticalAlignment="Center" />
            </Button>
            <Button Margin="2" Padding="2" Click="LoadDataClick" ToolTip="Load and link your mind map data to..." x:Name="LoadDataButton" Width="20">
                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE8E5;" VerticalAlignment="Center" />
            </Button>
            <Button Margin="2" Padding="2" Click="ToggleColorSchemeClick" ToolTip="Toggle color scheme: Light/Dark" x:Name="ToggleColorScheme" Width="20">
                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE790;" VerticalAlignment="Center" />
            </Button>
        </StackPanel>
        <wv2:WebView2 Grid.Row="1" x:Name="MindMapBrowser" Loaded="MindMapBrowser_Loaded" Unloaded="MindMapBrowser_Unloaded" CoreWebView2InitializationCompleted="MindMapBrowser_CoreWebView2InitializationCompleted" WebMessageReceived="MindMapBrowser_WebMessageReceived" NavigationCompleted="MindMapBrowser_NavigationCompleted" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinHeight="100" MinWidth="100" />
    </Grid>
</UserControl>
